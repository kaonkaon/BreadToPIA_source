        if(no_hold == 0){
            if(obj_hold.hold != 1) {
                obj_hold.hold = 1;
                holding_val = drop_val;
                drop_val = income_val;
                income_val = irandom_range(0, 3);
            }
            else {
                placehold = holding_val;
                holding_val = drop_val;
                drop_val = placehold;
            }
            
            audio_play_sound(snd_hold, 10, false);
            
            no_hold = 1;
        }
    }
    
